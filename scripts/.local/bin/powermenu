chosen=$(printf "â» Shutdown\nâŸ³ Reboot\nó°ƒ Logout\nğŸ”’ Lockscreen\nî»© Zen mode" | rofi -dmenu -i -theme powermenu -p " ó°¦ Powermenu")

case "$chosen" in
  "â» Shutdown") poweroff ;;
  "âŸ³ Reboot") reboot ;;
  "ó°ƒ Logout") hyprctl dispatch exit ;;
  "ğŸ”’ Lockscreen") hyprlock ;;
  "î»© Zen mode")
    # ZjistÃ­ aktuÃ¡lnÃ­ stav dim_inactive a pÅ™epne jej
    current_state=$(hyprctl getoption decoration:dim_inactive)
    if [[ "$current_state" == *"int: 1"* ]]; then
        hyprctl keyword decoration:dim_inactive no
    else
        hyprctl keyword decoration:dim_inactive yes
    fi
    ;;
  *) exit 1 ;;
